unit rankingProutos;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.StdCtrls, Vcl.ComCtrls;

type
  TFrmRnkingProdutos = class(TForm)
    DBGrid1: TDBGrid;
    dataInicial: TDateTimePicker;
    Label1: TLabel;
    Label2: TLabel;
    dataFinal: TDateTimePicker;
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FrmRnkingProdutos: TFrmRnkingProdutos;

implementation

{$R *.dfm}

uses Modulo;

procedure TFrmRnkingProdutos.FormShow(Sender: TObject);
begin
dm.tb_detalhes_vendas.Active;

 dm.query_det_vendas.Close;
  dm.query_det_vendas.SQL.Clear;
  dm.query_det_vendas.SQL.Add('select sum(quantidade), id_produto from item_venda group by id_produto where data >= :dataInicial and data <= :dataFinalorder by sum(quantidade) desc;');
  dm.query_det_vendas.ParamByName('dataInicial').Value :=  FormatDateTime('yyyy/mm/dd', dataInicial.Date);
  dm.query_det_vendas.ParamByName('dataFinal').Value :=  FormatDateTime('yyyy/mm/dd', dataFinal.Date);
  //dm.query_det_vendas.ParamByName('fornecedor').Value :=  cbFornecedor.Text;
  dm.query_det_vendas.Open;



end;

end.
